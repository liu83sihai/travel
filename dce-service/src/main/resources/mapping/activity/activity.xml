<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.dce.business.dao.activity.IActivityDao">
	<resultMap type="activityDo" id="activityResultMap">
		<result property="id" column="id" />
		<result property="userId" column="user_id" />
		<result property="synopsis" column="synopsis" />
		<result property="content" column="content" />
		<result property="images" column="images" />
		<result property="hitNum" column="hit_num" />
		<result property="createDate" column="create_date" />
		<result property="createName" column="create_name" />
		<result property="modifyDate" column="modify_date" />
		<result property="modifyName" column="modify_name" />
		<result property="status" column="status" />
		<result property="remark" column="remark" />
	</resultMap>

	<select id="getById" parameterType="int" resultMap="activityResultMap">
		SELECT * 
		  FROM tr_activity WHERE id = #{id}
	</select>

	<select id="selectActivity" parameterType="Map" resultMap="activityResultMap">
		SELECT * 
		  FROM tr_activity
		  <trim prefix="WHERE" prefixOverrides="AND |OR "> 
			<if test="id != null">  
				AND id = #{id}
			</if>
			<if test="userId != null">  
				AND user_id = #{userId}
			</if>
			<if test="synopsis != null">  
				AND synopsis = #{synopsis}
			</if>
			<if test="content != null">  
				AND content = #{content}
			</if>
			<if test="images != null">  
				AND images = #{images}
			</if>
			<if test="hitNum != null">  
				AND hit_num = #{hitNum}
			</if>
			<if test="createDate != null">  
				AND create_date = #{createDate}
			</if>
			<if test="createName != null">  
				AND create_name = #{createName}
			</if>
			<if test="modifyDate != null">  
				AND modify_date = #{modifyDate}
			</if>
			<if test="modifyName != null">  
				AND modify_name = #{modifyName}
			</if>
			<if test="status != null">  
				AND status = #{status}
			</if>
			<if test="remark != null">  
				AND remark = #{remark}
			</if>
         </trim> 

	</select>
	<select id="selectActivityByPage" parameterType="Map" resultMap="activityResultMap">
		SELECT * 
		  FROM tr_activity
		  <trim prefix="WHERE" prefixOverrides="AND |OR "> 
			<if test="id != null">  
				AND id = #{id}
			</if>
			<if test="userId != null">  
				AND user_id = #{userId}
			</if>
			<if test="synopsis != null">  
				AND synopsis = #{synopsis}
			</if>
			<if test="content != null">  
				AND content = #{content}
			</if>
			<if test="images != null">  
				AND images = #{images}
			</if>
			<if test="hitNum != null">  
				AND hit_num = #{hitNum}
			</if>
			<if test="createDate != null">  
				AND create_date = #{createDate}
			</if>
			<if test="createName != null">  
				AND create_name = #{createName}
			</if>
			<if test="modifyDate != null">  
				AND modify_date = #{modifyDate}
			</if>
			<if test="modifyName != null">  
				AND modify_name = #{modifyName}
			</if>
			<if test="status != null">  
				AND status = #{status}
			</if>
			<if test="remark != null">  
				AND remark = #{remark}
			</if>
         </trim> 

	</select>
	
	<update id="updateActivityById" parameterType="activityDo">
		UPDATE tr_activity 
		<trim prefix="SET" suffixOverrides=","> 
		<if test="userId != null">  
				user_id = #{userId},
		</if>				
		<if test="synopsis != null">  
				synopsis = #{synopsis},
		</if>				
		<if test="content != null">  
				content = #{content},
		</if>				
		<if test="images != null">  
				images = #{images},
		</if>				
		<if test="hitNum != null">  
				hit_num = #{hitNum},
		</if>				
		<if test="createDate != null">  
				create_date = #{createDate},
		</if>				
		<if test="createName != null">  
				create_name = #{createName},
		</if>				
		<if test="modifyDate != null">  
				modify_date = #{modifyDate},
		</if>				
		<if test="modifyName != null">  
				modify_name = #{modifyName},
		</if>				
		<if test="status != null">  
				status = #{status},
		</if>				
		<if test="remark != null">  
				remark = #{remark},
		</if>				
		</trim>
		WHERE id = #{id} 
	</update>	
	
	<insert id="addActivity" parameterType="activityDo" keyProperty="id"
		useGeneratedKeys="true" >
		INSERT INTO tr_activity(		user_id
		,synopsis
		,content
		,images
		,hit_num
		,create_date
		,create_name
		,modify_date
		,modify_name
		,status
		,remark
)
		     VALUES (		#{userId}
		,#{synopsis}
		,#{content}
		,#{images}
		,#{hitNum}
		,#{createDate}
		,#{createName}
		,#{modifyDate}
		,#{modifyName}
		,#{status}
		,#{remark}
)
	</insert>
	
	<delete id="deleteById" parameterType="int" >
		DELETE FROM tr_activity WHERE id = #{id}
	</delete>
	
</mapper>

